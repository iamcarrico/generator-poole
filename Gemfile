# Pull gems from RubyGems
source 'https://rubygems.org'
ruby '2.0.0'

# Jekyll itself.
gem 'jekyll', '~>2.0'

# The Sass stack that we use.
gem 'compass', '~>1.0'
gem 'toolkit', '~>2.0'
gem 'singularitygs', '~>1.2'
gem 'breakpoint', '~>2.5'

group :jekyll_plugins do
  # Some base Jekyll plugins that are nice to have.
  gem 'jekyll-minify-html'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'

  # Asset Pipline
  gem 'jekyll-assets'
  gem 'uglifier'
  gem 'yui-compressor'

  # Mr. Poole's Tools
  gem 'jekyll-poole'
end
